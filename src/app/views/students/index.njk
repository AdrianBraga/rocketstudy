{% extends 'layout.njk' %}

{% block content %}
  <div class="card table-container">
    <a href="/students/create">Adicionar Estudante</a>
    <table style='width: 100%'>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Ano Escolar</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
        {% for student in students %}
          <tr>
            <td>
              <div>
                <span style='background-image: url({{student.avatar_url}})'></span>
                {{student.name}}
              </div>
            </td>
            <td>{{student.email}}</td>
            <td>{{student.school}}</td>
            <td><a href="/students/{{student.id}}">Ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}