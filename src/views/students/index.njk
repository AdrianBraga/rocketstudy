{% extends 'layout.njk' %}

{% block content %}
  <div class="card table-container">
    <table style='width: 100%'>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Acompanhamento</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
        {% for student in students %}
          <tr>
            <td>
              <div>
                <span style='background-image: url({{student.avatar_url}})'></span>
                {{student.name}}
              </div>
            </td>
            <td>
              {% for subject in student.subjects.split(',') %}
                <span class='subjects'>{{subject}}</span>
              {% endfor %}
            </td>
            <td><a href="/students/{{student.id}}">Ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}