{% extends 'layout.njk' %}

{% block content %}
  <form class="card" action="/teachers" method="POST">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/4914384) no-repeat center center / cover;">

    </section>

    <section class="details">

      <h1>Cadastrar Professor</h1>

      <div class="item">
        <div>Avatar URL *</div>
        <div>
          <input type="url" name="avatar_url" placeholder="https://">
        </div>
      </div>

      <div class="item">
        <div>Nome Completo *</div>
        <div>
          <input type="text" name="name" placeholder="Seu nome completo">
        </div>
      </div>

      <div class="item">
        <div>Data de Nascimento</div>
        <div>
          <input type="date" name="date_birth">
        </div>
      </div>

       <div class="item">
        <div>Grau de Escolaridade</div>
        <div>
          <select name="schooling">
            <option selected disabled label="Selecione o seu grau de escolaridade"></option>
            <option value="ensino_medio">Ensino Médio Completo</option>
            <option value="ensino_superior">Ensino Superior Completo</option>
            <option value="mestrado">Mestrado</option>
            <option value="doutorado">Doutorado</option>
          </select>
        </div>
      </div>

      <div class="item">
        <div>Tipo de Aula</div>
        <div>
          <span><input type="radio" name="type_class" value="presential" checked>Presencial</span>
          <span><input type="radio" name="type_class" value="distance">À Distancia</span>
        </div>
      </div>

      <div class="item">
        <div>Área de Atuação</div>
        <div>
          <input type="text" name="subject" placeholder="Física, Química">
        </div>
      </div>

      <button type="submit">Cadastrar</button>

    </section>
  </form>
{% endblock content %}